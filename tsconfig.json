{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "dist/index.ts"
  },
  "include": ["src", "rollup.config.ts"]
}
